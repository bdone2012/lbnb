 <% if current_user.id == params["id"].to_i %>

      <h1><%= current_user.username %>'s Profile</h1>

      <nav>
        <a href="/">Home</a>
        <a href="/users/">Browse</a>
        <a href="/videos/new">Add reel</a>
        <a href="/movies/new">Add fav movie</a>
      </nav>

      <div class="video_box">
        <h2>Videos</h2>
        <p><% current_user.videos.map do |vid| %></p>
          <embed
          width="420" height="345"
          src="<%= vid.url %>"
          type="application/x-shockwave-flash">
          </embed>
          <% end %>
      </div>

      <div class="fav_movies">
        <h2>Fav Movies</h2>
        <p> <% current_user.movies.map do |mov| %></p>
              <%= mov.fav_movie %>
            <% end %>
      </div>

  <% else %>

        <h1><%= @current_page.username %></h1>
  <div class="video_box">
    <h2>Videos</h2>
     <p><% @current_page.videos.map.each do |vid| %></p>
          <embed
          width="420" height="345"
          src="<%= vid.url %>"
          type="application/x-shockwave-flash">
          </embed>
        <% end %>
      </div>

        <h2><%= @current_page.point %></h2>

        <div class="fav_movies">
         <h2>Fav Movies</h2>
          <p> <% @current_page.movies.map do |mov| %>
                <%= mov.fav_movie %>
              <% end %>
          </p>
        </div>

          <%= form_for(@user) do |f| %>
            <%= f.label(:give_points) %>
            <%= f.text_field(:point) %>
            <%= f.submit %>
          <% end %>

<% end %>


